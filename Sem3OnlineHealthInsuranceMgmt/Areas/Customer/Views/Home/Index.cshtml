@model IEnumerable<Insurance>

<div class="row pb-3">
    @foreach (var insurance in Model)
    {
        <div class="col-lg-3 col-sm-6">
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@insurance.ImageUrl" class="card-img-top rounded"/>
                        <div class="card-body pb-0">
                            <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@insurance.Title</p>
                            <p class="card-title text-warning text-center">by <b>@insurance.ResponsibleUnit</b></p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center mb-0">
                                List Price: <span class="text-decoration-line-through">
                                    @insurance.ListPrice.ToString("c")
                                </span>
                            </p>
                        </div>
                        <div class="pl-1">
                            <p class="text-dark text-opacity-75 text-center">
                                As low as: <span>@insurance.Price100.ToString("c")</span>
                            </p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" asp-route-insuranceId="@insurance.Id"
                           class="btn btn-primary bg-gradient border-0 form-control">
                            Details
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>